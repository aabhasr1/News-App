<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:padding="16dp"
                                                   android:layout_height="116dp">
    <ImageView
            android:id="@+id/iv_image"
            android:layout_width="80dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/iv_tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEADER"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/iv_image"
            android:layout_marginStart="24dp"/>

    <TextView
            android:id="@+id/iv_tv_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="adsdsdsdsdsdasdsadasdasdasdasdasdasdasdaadsdsdsdsdsdasdsadasdasdasdasdasdasdasdaadsdsdsdsdsdasdsadasdasdasdasdasdasdasdaadsdsdsdsdsdasdsadasdasdasdasdasdasdasda"
            android:ellipsize="end" app:layout_constraintTop_toBottomOf="@+id/iv_tv_header"
            app:layout_constraintStart_toStartOf="@+id/iv_tv_header" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>